@using TEC_AL_0002.Models;

@*Vista Index*@
<style>
    :root {
        --white: #FFFFFF;
        --black: #000000;
        --very-light-pink: #C7C7C7;
        --text-input-field: #F7F7F7;
        --hospital-green: #ACD9B2;
        --griss-color: #808080;
        --sm: 14px;
        --md: 16px;
        --lg: 18px;
    }

    body {
        margin: 0;
        font-family: 'Quicksand', sans-serif;
    }

    .my-order {
        width: 100%;
        height: 100vh;
        display: grid;
        place-items: center;
    }

    .title {
        font-size: var(--lg);
        font-weight:bold;
        margin-bottom: 30px;
    }

    .my-order-container {
        display: grid;
        grid-template-rows: auto 1fr auto;
        width: 300px;
        margin-bottom:5%;
    }

    .my-order-content {
        display: flex;
        flex-direction: column;
    }

    .order {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 16px;
        align-items: center;
        background-color: var(--text-input-field);
        margin-bottom: 24px;
        border-radius: 8px;
        padding: 0 24px;
    }

        .order p:nth-child(1) {
            display: flex;
            flex-direction: column;
        }

        .order p span:nth-child(1) {
            font-size: var(--md);
            font-weight: bold;
        }

        .order p span:nth-child(2) {
            font-size: var(--sm);
            color: var(--very-light-pink);
        }

        .order p:nth-child(2) {
            text-align: end;
            font-weight: bold;
        }

    .shopping-cart {
        display: grid;
        grid-template-columns: auto 1fr auto auto;
        gap: 16px;
        margin-bottom: 24px;
        align-items: center;
    }

        .shopping-cart figure {
            margin: 0;
        }

            .shopping-cart figure img {
                width: 40px;
                height: 40px;
                object-fit: cover;
            }

        .shopping-cart p:nth-child(2) {
            color: var(--very-light-pink);
        }

        .shopping-cart p:nth-child(3) {
            font-size: var(--md);
            font-weight: bold;
        }

        .link{
            text-decoration:none;
            color: var(--griss-color);
            font-size :var(--md);
        }

    .link:hover {
            text-decoration: none;
            color: var(--griss-color);
            font-size: var(--sm);
    }
</style>

@*Contenedor de principal de roles de usuario*@
<div class="this-container">

	@*Roles de usuario*@
	<section class="main-container">
		<div class="cards-container">

			@if (User.IsInRole("Administrador"))
			{
                <div class="my-order">
                    <div class="my-order-container">
                        <h1 class="title">Sucursales</h1>

                        <div class="my-order-content">
                            <div class="order">
                                <p>
                                    <span>@DateTime.Today</span>
                                    <span>articles</span>
                                </p>
                                <p>Todas(3)</p>
                            </div>

                            <div class="shopping-cart">
                                <figure>
                                    <img src="~/icons/estrategia.png" alt="estrategia.">
                                </figure>
                                <a class="link" asp-area="" asp-controller="SqlServer" asp-action="Index">Ag. Valencia</a>
                                <p>[cajas]</p>
                            </div>

                            <div class="shopping-cart">
                                <figure>
                                    <img src="~/icons/estrategia.png" alt="estrategia.">
                                </figure>
                                <a class="link" asp-area="" asp-controller="SqlServer" asp-action="Index">Ag. San Diego</a>
                                <p>[cajas]</p>
                            </div>

                            <div class="shopping-cart">
                                <figure>
                                    <img src="~/icons/estrategia.png" alt="estrategia.">
                                </figure>
                                <a class="link" asp-area="" asp-controller="SqlServer" asp-action="Index">Ag. San Felipe</a>
                                <p>[cajas]</p>
                            </div>
                        </div>
                    </div>
                </div>
			}
		</div>
	</section>

</div>